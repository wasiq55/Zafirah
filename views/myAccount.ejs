<%- include('./partials/header') %>

<div class="w-full min-h-screen px-10 py-24 bg-gray-50">
    <!-- Account Header -->
    <div class="flex justify-between items-center border-b pb-5 mb-8">
        <h2 class="text-3xl font-semibold">My Account</h2>
        <a href="/users/logout" class="text-red-500 hover:text-red-600 flex items-center gap-1">
            <i class="ri-logout-circle-r-line text-lg"></i> Logout
        </a>
    </div>

    <!-- Account Info Section -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        <!-- Left Side: Profile Info -->
        <div class="bg-white rounded-xl shadow p-6">
            <h3 class="text-xl font-medium mb-4 border-b pb-2">Profile Details</h3>

            <div class="space-y-3">
                <div>
                    <h4 class="text-gray-500 text-sm">Full Name</h4>
                    <p class="text-lg font-medium"><%= user.fullname %></p>
                </div>
                <div>
                    <h4 class="text-gray-500 text-sm">Email Address</h4>
                    <p class="text-lg font-medium"><%= user.email %></p>
                </div>
                <div>
                    <h4 class="text-gray-500 text-sm">Joined On</h4>
                    <p class="text-lg font-medium"><%= new Date(user.createdAt).toDateString() %></p>
                </div>
            </div>
        </div>

        <!-- Right Side: Order & Cart Summary -->
        <div class="bg-white rounded-xl shadow p-6">
            <h3 class="text-xl font-medium mb-4 border-b pb-2">Your Activity</h3>

            <div class="space-y-5">
                <div class="flex justify-between items-center">
                    <h4 class="text-gray-600">Total Items in Cart</h4>
                    <span class="text-blue-500 font-semibold"><%= user.cart.length %></span>
                </div>
                <div class="flex justify-between items-center">
                    <h4 class="text-gray-600">Orders Placed</h4>
                    <span class="text-green-600 font-semibold"><%= user.orders ? user.orders.length : 0 %></span>
                </div>
            </div>

            <div class="mt-8 flex gap-4">
                <a href="/cart" class="px-5 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">
                    View Cart
                </a>
                <a href="/shop" class="px-5 py-2 border border-gray-400 text-gray-700 rounded-md hover:bg-gray-100">
                    Continue Shopping
                </a>
            </div>
        </div>
    </div>

    <!-- Order History -->
    <div class="mt-12">
        <h3 class="text-2xl font-semibold mb-5">Order History</h3>

        <% if (user.orders && user.orders.length > 0) { %>
            <div class="bg-white shadow rounded-xl overflow-hidden">
                <table class="w-full text-left">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="py-3 px-5">Order ID</th>
                            <th class="py-3 px-5">Date</th>
                            <th class="py-3 px-5">Total</th>
                            <th class="py-3 px-5">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% user.orders.forEach(function(order) { %>
                            <tr class="border-b hover:bg-gray-50">
                                <td class="py-3 px-5"><%= order._id %></td>
                                <td class="py-3 px-5"><%= new Date(order.date).toLocaleDateString() %></td>
                                <td class="py-3 px-5">â‚¹ <%= order.total %></td>
                                <td class="py-3 px-5 text-green-600"><%= order.status %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-gray-500 text-center py-10 bg-white rounded-xl shadow">
                <i class="ri-shopping-bag-3-line text-3xl mb-3 block"></i>
                <p>No orders placed yet.</p>
            </div>
        <% } %>
    </div>
</div>

<%- include('./partials/footer') %>
