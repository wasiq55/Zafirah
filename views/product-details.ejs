<%- include('./partials/header') %>

  <section class="min-h-screen bg-gray-50 py-16 px-6 md:px-16">
    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-10 items-center">

      <!-- üñºÔ∏è Product Image -->
      <div class="flex justify-center bg-white rounded-2xl shadow-md p-8">
        <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>"
          class="object-contain h-96 w-full rounded-xl">
      </div>

      <!-- üìù Product Info -->
      <div>
        <h1 class="text-3xl font-semibold text-gray-800 mb-4">
          <%= product.name %>
        </h1>
        <p class="text-2xl font-bold text-blue-600 mb-4">‚Çπ <%= product.price %>
        </p>

        <% if(product.discount && product.discount> 0){ %>
          <p class="text-green-600 font-medium mb-2">Discount: <%= product.discount %> Off on MRP</p>
          <% } %>

            <p class="text-gray-600 leading-relaxed mb-6">
              Discover our premium-quality <%= product.name %>. Perfectly designed and crafted with care.
                Add it to your collection and enjoy the best deals this season!
            </p>

            <div class="flex gap-4">
              <a href="/addtocart/<%= product._id %>"
                class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-6 py-3 rounded-lg transition">
                üõí Add to Cart
              </a>

              <a href="/payment/checkout/<%= product._id %>"
                class="bg-green-600 hover:bg-green-700 text-white font-medium px-6 py-3 rounded-lg transition">
                üí≥ Buy Now
              </a>
            </div>

            <!-- ‚úÖ Add this Go Back button -->
            <div class="mt-6">
              <button onclick="window.history.back()"
                class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium px-6 py-2 rounded-lg transition">
                ‚¨ÖÔ∏è Go Back to Search Results
              </button>
            </div>


            <div class="mt-8">
              <h3 class="text-lg font-semibold text-gray-800 mb-2">Product Colors:</h3>
              <div class="flex gap-3">
                <div class="w-10 h-10 rounded-full border" style="background-color: #<%= product.bgcolor %>;"></div>
                <div class="w-10 h-10 rounded-full border" style="background-color: #<%= product.panelcolor %>;"></div>
                <div class="w-10 h-10 rounded-full border" style="background-color: #<%= product.textcolor %>;"></div>
              </div>
            </div>
      </div>
    </div>
  </section>

  <%- include('./partials/footer') %>