<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Zafirah</title>
  <link rel="icon" href="/images/logo.jpeg" type="image/jpeg">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="font-['helvetica_now_display'] bg-gray-50">

  <!-- âœ… Global Flash Messages -->
  <% if (success && success.length > 0) { %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 bg-green-500 text-white px-5 py-2 rounded-md shadow-lg z-[9999] transition-all duration-500">
      <%= success[0] %>
    </div>
  <% } %>

  <% if (error && error.length > 0) { %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 bg-red-500 text-white px-5 py-2 rounded-md shadow-lg z-[9999] transition-all duration-500">
      <%= error[0] %>
    </div>
  <% } %>

  <script>
    // Auto-hide flash messages after 3 seconds
    setTimeout(() => {
      document.querySelectorAll('.fixed.top-5').forEach(el => el.remove());
    }, 3000);
  </script>

  <!-- Navbar -->
  <nav
    class="w-full flex flex-wrap justify-between items-center fixed top-0 left-0 px-6 md:px-10 py-3 bg-white shadow-md z-50">
    <h3 class="text-2xl font-semibold text-[#48606E]">Zafirah</h3>

    <% if (isLoggedin) { %>
      <!-- Search Bar -->
      <form action="/search" method="GET" class="flex items-center w-full md:w-1/3 mt-3 md:mt-0">
        <input type="text" name="q" placeholder="Search for products..."
          class="w-full border border-gray-300 rounded-l-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#48606E]"
          required>
        <button type="submit"
          class="bg-[#48606E] text-white px-4 py-2 rounded-r-full hover:bg-[#3a505d] transition-all">
          <i class="ri-search-line"></i>
        </button>
      </form>

      <div class="flex gap-5 items-center text-[#48606E] mt-3 md:mt-0">
        <a href="/shop" class="hover:text-black">Shop</a>
        <a href="/cart" class="hover:text-black">Cart</a>
        <a href="/account" class="hover:text-black">My Account</a>
        <a class="text-red-500 hover:text-red-700" href="/users/logout">Logout</a>
      </div>
    <% } else { %>
      <div class="flex gap-5 items-center text-[#48606E] mt-3 md:mt-0">
        <a href="/" class="hover:text-black">Login</a>
      </div>
    <% } %>
  </nav>

  <!-- Add padding so content is not hidden under navbar -->
  <div class="pt-20"></div>

</body>
</html>
