<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Checkout - MyShop</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
</head>

<body class="bg-gray-100 min-h-screen">

  <!-- Header -->
  <header class="bg-yellow-400 p-4 flex justify-between items-center shadow-md">
    <h1 class="text-2xl font-bold text-gray-900">MyShop</h1>
    <a href="/shop" class="text-sm text-blue-700 hover:underline">‚Üê Continue Shopping</a>
  </header>

  <main class="max-w-6xl mx-auto py-10 px-4 grid md:grid-cols-3 gap-8">
    <!-- Left: Items -->
    <section class="md:col-span-2 bg-white p-6 rounded-xl shadow-md">
      <% if (product) { %>
        <!-- ‚úÖ Single Product Checkout -->
        <h2 class="text-2xl font-semibold mb-6 border-b pb-2">Review Your Order</h2>
        <div class="flex flex-col md:flex-row items-center gap-6">
          <img src="<%= product.image %>" alt="<%= product.name %>" class="w-40 h-40 object-cover rounded-md border" />
          <div class="flex-1">
            <h3 class="text-xl font-medium">
              <%= product.name %>
            </h3>
            <p class="text-gray-600 mt-1 mb-2">
              <%= product.description %>
            </p>
            <p class="text-lg font-semibold">‚Çπ<span id="price">
                <%= product.price %>
              </span></p>

            <!-- Quantity Controls -->
            <div class="flex items-center mt-4">
              <button id="decreaseQty" class="bg-gray-300 px-3 py-1 rounded-l hover:bg-gray-400">-</button>
              <input id="quantity" type="number" value="1" min="1" class="w-16 text-center border border-gray-300">
              <button id="increaseQty" class="bg-gray-300 px-3 py-1 rounded-r hover:bg-gray-400">+</button>
            </div>
          </div>
        </div>

        <% } else if (cart && cart.length> 0) { %>
          <!-- ‚úÖ Cart Checkout -->
          <h2 class="text-2xl font-semibold mb-6 border-b pb-2">Your Shopping Cart</h2>
          <% let total=0; %>
            <ul class="divide-y divide-gray-200">
              <% cart.forEach((item, i)=> { total += item.price; %>
                <li class="flex items-center justify-between py-4">
                  <div class="flex items-center gap-4">
                    <img src="<%= item.image %>" alt="<%= item.name %>"
                      class="w-20 h-20 object-cover rounded-md border" />
                    <div>
                      <h3 class="font-medium">
                        <%= item.name %>
                      </h3>
                      <p class="text-gray-600 text-sm">‚Çπ<%= item.price %>
                      </p>
                      <!-- Quantity -->
                      <div class="flex items-center mt-2">
                        <button class="bg-gray-300 px-2 py-1 rounded-l decrease" data-index="<%= i %>">-</button>
                        <input type="number" value="1" min="1" class="w-12 text-center border border-gray-300 qty"
                          data-index="<%= i %>">
                        <button class="bg-gray-300 px-2 py-1 rounded-r increase" data-index="<%= i %>">+</button>
                      </div>
                    </div>
                  </div>
                  <div class="font-semibold text-gray-800">‚Çπ<%= item.price %>
                  </div>
                </li>
                <% }) %>
            </ul>

            <% } else { %>
              <p class="text-center text-gray-600 py-10">üõí Your cart is empty. <a href="/shop"
                  class="text-blue-600 hover:underline">Shop now</a></p>
              <% } %>
    </section>

    <!-- Right: Summary -->
    <% if (product || (cart && cart.length> 0)) { %>
      <aside class="bg-white p-6 rounded-xl shadow-md h-fit">
        <h2 class="text-xl font-semibold border-b pb-2 mb-4">Order Summary</h2>

        <div class="flex justify-between mb-2 text-gray-700">
          <span>Subtotal</span>
          <span id="subtotal">‚Çπ<%= product ? product.price : total %></span>
        </div>
        <div class="flex justify-between mb-4 text-gray-700">
          <span>Shipping</span>
          <span class="text-green-600 font-medium">Free</span>
        </div>
        <div class="flex justify-between text-lg font-bold border-t pt-3">
          <span>Total</span>
          <span id="grandTotal">‚Çπ<%= product ? product.price : total %></span>
        </div>

        <button id="payNowBtn"
          class="mt-6 w-full bg-yellow-500 hover:bg-yellow-600 text-gray-900 font-semibold py-3 rounded-lg transition">
          üí≥ Proceed to Pay
        </button>
      </aside>
      <% } %>
  </main>

  <script>
    const payBtn = document.getElementById('payNowBtn');
    const qtyInputs = document.querySelectorAll('.qty');
    const priceDisplay = document.getElementById('price');
    const quantityInput = document.getElementById('quantity');
    const decreaseQty = document.getElementById('decreaseQty');
    const increaseQty = document.getElementById('increaseQty');
    const subtotalEl = document.getElementById('subtotal');
    const grandTotalEl = document.getElementById('grandTotal');

    // ‚úÖ Single product quantity logic
    if (decreaseQty && increaseQty && quantityInput) {
      decreaseQty.addEventListener('click', () => {
        let value = parseInt(quantityInput.value);
        if (value > 1) quantityInput.value = value - 1;
        updateTotal();
      });

      increaseQty.addEventListener('click', () => {
        let value = parseInt(quantityInput.value);
        quantityInput.value = value + 1;
        updateTotal();
      });
    }

    // ‚úÖ Cart quantity logic
    document.querySelectorAll(".increase").forEach(btn => {
      btn.addEventListener("click", () => {
        const index = btn.dataset.index;
        const input = document.querySelector(`.qty[data-index="${index}"]`);
        input.value = parseInt(input.value) + 1;
      });
    });

    document.querySelectorAll(".decrease").forEach(btn => {
      btn.addEventListener("click", () => {
        const index = btn.dataset.index;
        const input = document.querySelector(`.qty[data-index="${index}"]`);
        if (parseInt(input.value) > 1) input.value = parseInt(input.value) - 1;
      });
    });

    // ‚úÖ Update total dynamically
    function updateTotal() {
      if (quantityInput && priceDisplay) {
        const total = parseInt(priceDisplay.textContent) * parseInt(quantityInput.value);
        subtotalEl.textContent = `‚Çπ${total}`;
        grandTotalEl.textContent = `‚Çπ${total}`;
      }
    }

    // ‚úÖ Razorpay payment
    if (payBtn) {
      payBtn.addEventListener('click', async () => {
        const qty = quantityInput ? parseInt(quantityInput.value) : 1;
        const price = parseInt(priceDisplay ? priceDisplay.textContent : (subtotalEl ? subtotalEl.textContent.replace('‚Çπ', '') : 0));

        const totalAmount = price * qty;

        const response = await fetch("/create-order", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ amount: totalAmount })
        });

        const data = await response.json();
        if (!data || !data.id) return alert("Failed to create Razorpay order");

        const options = {
          key: "<%= razorpayKeyId %>",
          amount: data.amount,
          currency: data.currency,
          name: "MyShop",
          description: "Secure Payment",
          order_id: data.id,
          handler: function (response) {
            alert("‚úÖ Payment Successful!");
            window.location.href = "/success";
          },
          theme: { color: "#fbbf24" }
        };
        const razor = new Razorpay(options);
        razor.open();
      });
    }

    // Auto update subtotal when changing quantity in cart view
    qtyInputs.forEach(input => {
      input.addEventListener('input', () => {
        let sum = 0;
        document.querySelectorAll('.qty').forEach((q, i) => {
          const price = parseFloat(document.querySelectorAll('li .font-semibold')[i].textContent.replace('‚Çπ', ''));
          sum += price * parseInt(q.value);
        });
        subtotalEl.textContent = `‚Çπ${sum}`;
        grandTotalEl.textContent = `‚Çπ${sum}`;
      });
    });

  </script>

</body>

</html>